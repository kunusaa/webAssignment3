<%- include('./templates/base', {pageTitle: 'weather app | alua', content: `
  <div class="container">
    <div class="search-box">
      <i class='bx bxs-map'></i>
      <box-icon type='solid' name='map'></box-icon>
      <input type="text" id="cityInput" placeholder="enter your location">
      <button class='bx bx-search'></button>
    </div>
  
    <div class="weather-box">
      <div class="info-weather">
        <div class="weather">
          <img src="assets/images/cloud.png">
          <p class="temperature">16 <span>°C</span></p>
          <p class="description">Broken Clouds</p>
        </div>
      </div>
      <div class="country-code">
        <i class="fas fa-globe"></i>
        <span class="country-code"></span>
      </div>
    </div>
  
    <div class="weather-details">
  
      <div class="humidity">
        <i class='bx bx-water'></i>
        <div class="text">
          <div class="info-humidity">
            <span>0%</span>
            <div>
              <p>Humidity</p>
            </div>
          </div>
        </div>
      </div>
  
      <div class="wind">
        <i class='bx bx-wind' ></i>
        <div class="text">
          <div class="info-wind">
            <span>0 Km/h</span>
            <div>
              <p>Wind Speed</p>
            </div>
          </div>
        </div>
      </div>
  
      <div class="feels">
        <i class='bx bx-male-female'></i>
        <div class="text">
          <div class="info-feels">
            <span> 16 °C</span>
            <div>
              <p>Feels Like</p>
            </div>
          </div>
        </div>
      </div>
  
      <div class="pressure">
        <i class='bx bx-cloud'></i>
        <div class="text">
          <div class="info-pressure">
            <span> 900 hPa</span>
            <div>
              <p>Pressure</p>
            </div>
          </div>
        </div>
      </div>
  
      <div class="rain-volume">
        <i class='bx bx-cloud-rain'></i>
        <div class="text">
          <div class="info-rain-volume">
            <span class="rain-volume-value">0</span> mm
            <div>
              <p>Rain Volume last 3 h</p>
            </div>
          </div>
        </div>
      </div>
  
      <div class="not-found">
        <div class="box">
          <img src="assets/images/notfound.png">
          <p>Oop! Location not found!</p>
        </div>
      </div>
      
    </div>
  
    <div class="wikipedia-container" style="position: absolute; bottom: -500px; left: 50%; transform: translateX(-50%); width: 900px;">
      <div class="wikipedia-info">
        <i class='bx bxl-wikipedia'></i>
        <h2 style="text-align: center;">Wikipedia Information</h2>
        <div class="text">
          <div class="info-wikipedia">
            <div id="wikipedia-info-container" class="wikipedia-info-container" style="max-height: 200px; overflow: hidden; text-overflow: ellipsis;">
              <div id="wikipedia-info" style="text-align: center;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
    <div class="map">
      <div id="map"></div>
    </div>
  </div>

  <script src="assets/scripts/map.js"></script>
  <script src="assets/scripts/data.js"></script>
  <script src="assets/scripts/handlers.js"></script>
  <script src="assets/scripts/weather.js"></script>
`}) %>